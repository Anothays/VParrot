<div class="w-100 bg-primary text-light">
    <div class="p-5 d-flex justify-content-center text-center">
        <div class="">
            <p>Horaires d'ouverture</p>
            <ul class="list-unstyled">
                {% for day in details.openedDays%}
                <li class="grid">
                    {{ day }}
                </li>
                {% endfor %}
            </ul>
            <p>Contactez-nous</p>
            <p>Par téléphone : {{ details.telephone }} </p>
            <p>Par email : <a href="#" class="text-light">{{ details.email }}</a> </p>
