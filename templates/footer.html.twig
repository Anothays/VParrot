<footer class="w-100 bg-primary text-light">
    <div class="p-5 d-flex justify-content-center text-center">
        <span>
            <p>Horaires d'ouverture</p>
            <ul class="list-unstyled">
                {% for day in details.openedDays%}
                <li class="grid">
                    {{ day }}
                </li>
                {% endfor %}
            </ul>
            <address class="pt-5">
                <h3 class="text-white">Contactez-nous</h3>
                <p>Par téléphone : <a class="text-white" href="tel:{{ details.telephone }}">{{ details.telephone }}</a></p>
                <p>Par email : <a href="mailto:{{ details.email }}" class="text-light">{{ details.email }}</a></p>
                <p>Adresse : {{ details.address }}</p>
            </address>
        </span>
    </div>
    <div class="text-center">
        <p>© {{ "now"|date("Y") }} - Garage V.Parrot - <a class="text-white" href="{{ path('app_legal_notice') }}">Mentions Légales</a></p>
    </div>
</footer>