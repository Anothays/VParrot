<footer class="w-100 bg-primary text-light">
    <div class="p-lg-5 d-flex justify-content-center text-center">
        <span>
            <p class="text-uppercase">Horaires d'ouverture</p>
            <ul class="list-unstyled">
                {% for day in schedule %}
                <li>
                    <p class="text-uppercase">{{ day }}</p>
                </li>
                {% endfor %}
            </ul>
            <address class="pt-5">
                <h3 class="text-white">Contactez-nous</h3>
                <p>Par téléphone : <a class="text-white" href="tel:{{ garage.telephone }}">{{ garage.telephone }}</a></p>
                <p>Par email : <a href="mailto:{{ garage.mail }}" class="text-light">{{ garage.mail }}</a></p>
                <p>Adresse : {{ garage.address }}</p>
            </address>
        </span>
    </div>
    <div class="text-center">
        <p>© {{ "now"|date("Y") }} - Garage V.Parrot - <a class="text-white" href="{{ path('app_legal_notice') }}">Mentions Légales</a></p>
    </div>
</footer>