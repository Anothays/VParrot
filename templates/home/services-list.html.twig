<ul id="services-list " class="d-flex justify-content-center overflow-x-scroll">
    {% for service in services %}
        <li class="card w-25 d-inline-block border-dark-subtle rounded-3 mb-5 mx-3 overflow-hidden" style="max-width: 250px; min-width: 250px; max-height: 440px; max-height: 440px;">
            <div class="card-header card-img-top rounded-top-3 p-0">
                <h3 class="text-white z-1 position-absolute w-100" style="top: 45px;">{{ service.name }}</h3>
                <img style="width: 100%; height: 150px; filter: brightness(80%);" class="d-block w-100 p-0 rounded-top-3 object-fit-cover"   alt="{{ service.name }}" src="{{ vich_uploader_asset(service, 'imageFile') }}" />
            </div>
            <div class="card-body bg-dark-subtle h-100 carItem text-center rounded-bottom-3">
                <p>{{ service.description }}</p>
            </div>
        </li>
    {% endfor %}
</ul>
